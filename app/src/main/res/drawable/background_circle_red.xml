<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="18dip" />
            <stroke android:width="1dip" android:color="@color/gray2" />
            <gradient android:angle="-90" android:startColor="#B95858" android:endColor="#B95858"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#B95858" />
            <solid android:color="#CACACA"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#CACACA" />
            <gradient android:angle="-90" android:startColor="#B95858" android:endColor="#B95858" />
        </shape>
    </item>
</selector>