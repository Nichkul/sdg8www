        <Button
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:text="Log in"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
